                  td 
        .product-description__mobile-table-button-container.mobile-only
          +mobile-table-button({
            heading: 'Изделие',
            target: '.js-calculator-fence__table',
          })
        .col-12.col-tablet-10.col-tablet-offset-1.col-desktop-6.col-desktop-offset-0
          .product-description__blueprint-container
            img(src='img/blueprint.png' srcset='img/blueprint@2x.png 2x' alt='Чертёж').product-description__blueprint
