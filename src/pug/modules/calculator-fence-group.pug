mixin calculator-fence-group({ heading = '', isActive = false, collapsing = true, icon = false } = {})
  - isActiveClass = isActive || !collapsing ? 'is-active' : false
  .calculator-fence-group.js-calculator-fence-group(class=isActiveClass)&attributes(attributes)
    button.calculator-fence-group__header.js-calculator-fence-group__toggle
      span.calculator-fence-group__heading= heading
        if icon
          img(src=icon alt=heading).calculator-fence-group__icon
      if collapsing
        span.calculator-fence-group__header-line
        span.calculator-fence-group__toggle
    .calculator-fence-group__content.js-calculator-fence-group__content
      block
